			</dependency>
			<dependency>
			    <groupId>org.springbyexample</groupId>
			    <artifactId>org.springbyexample.threadscope</artifactId>
			    <version>1.0.1</version>
			    <exclusions>
			    	<!-- Excluce old 3.0.0 spring version and some ugly stuff -->
